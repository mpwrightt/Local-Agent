{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "dist/**", "use": "@vercel/static" },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/lm/(.*)", "dest": "/api/lm/$1" },
    { "src": "/lm/(.*)", "dest": "/api/lm/$1" },
    { "src": "/(.*)", "dest": "/dist/$1" }
  ]
}


