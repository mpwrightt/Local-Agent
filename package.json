{
  "name": "local-agent",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:dev:main\" \"npm:dev:electron\"",
    "dev:main": "tsup electron/main.ts electron/preload.ts --out-dir dist-electron --format cjs --splitting false --shims --watch",
    "dev:electron": "wait-on tcp:5173 && wait-on file:dist-electron/main.cjs && wait-on file:dist-electron/preload.cjs && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/main.cjs",
    "build": "tsc -b && vite build && tsup electron/main.ts electron/preload.ts --out-dir dist-electron --format cjs --splitting false --shims",
    "lint": "eslint .",
    "preview": "vite preview",
    "start:prod": "cross-env NODE_ENV=production electron dist-electron/main.cjs",
    "agent:serve": "tsx src/agent/web_server.ts",
    "tunnel": "node scripts/tunnel.mjs",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@langchain/core": "^0.3.26",
    "@langchain/langgraph": "^0.2.22",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "electron": "^37.2.6",
    "langchain": "^0.2.19",
    "lucide-react": "^0.539.0",
    "ngrok": "^5.0.0-beta.2",
    "node-fetch": "^3.3.2",
    "ollama": "^0.5.16",
    "pino": "^9.8.0",
    "playwright": "^1.54.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "tsup": "^8.5.0",
    "wait-on": "^8.0.4",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.6",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vitest": "^3.2.4"
  },
  "bin": {
    "validate-manifest": "src/scripts/validate-manifest.ts"
  }
}
